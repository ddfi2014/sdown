<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ServerDownClient"
        mc:Ignorable="d"
        Title="ServerDown Client" Height="350" Width="525" MinHeight="200" MinWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="229*"/>
        </Grid.RowDefinitions>
        <Menu x:Name="menu">
            <MenuItem Name="menuItemOptions" Header="Options">
                <MenuItem Name="menuItemOptionsPrint" Header="Print"/>
                <MenuItem Name="menuItemOptionsPrintDialog" Header="Print..."/>
            </MenuItem>
        </Menu>
        <Grid Margin="0" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="88"/>
            </Grid.ColumnDefinitions>
            <ListBox x:Name="listBoxLog" Margin="10"/>
            <StackPanel Grid.Column="1">
                <Button x:Name="buttonPrintLog" Margin="10,10,10,10">
                    <Image Source="Resources/printer-icon-986.png" Margin="5"/>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
